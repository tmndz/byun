{
    "build": {
        "builder": "NIXPACKS"
    },
    "deploy": {
        "startCommand": "npm start",
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
    },
    "nixpacks": {
        "install": {
            "cmds": [
                "npm install"
            ]
        },
        "setup": {
            "nixPkgs": [
                "nodejs_22"
            ]
        }
    }
}
